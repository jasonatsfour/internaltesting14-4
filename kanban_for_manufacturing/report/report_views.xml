<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Paperformat for KFM report -->
        <record id="paperformat_kfm_barcode_report" model="report.paperformat">
            <field name="name">DYMO 30334 kfm</field>
            <field name="format">custom</field>
            <field name="page_height">31</field>
            <field name="page_width">57</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">1</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">10</field>
            <field name="dpi">96</field>
        </record>


        <report
            string="Kanban MRP Barcode"
            id="action_mrp_report_reordering_rule_barcode"
            model="mrp.kanban.reordering"
            report_type="qweb-pdf"
            name="kanban_for_manufacturing.report_mrp_reordering_rule_barcode"
            file="kanban_for_manufacturing.report_mrp_reordering_rule_barcode"
            paperformat="paperformat_kfm_barcode_report"/>

        <!-- Paperformat for KRR report -->
        <record id="paperformat_krr_barcode_report" model="report.paperformat">
            <field name="name">DYMO 30334 KRR</field>
            <field name="format">custom</field>
            <field name="page_height">31</field>
            <field name="page_width">57</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">1</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">96</field>
        </record>


        <report
            string="Reordering Rule Barcode"
            id="action_report_reordering_rule_barcode"
            model="kanban.reordering"
            report_type="qweb-pdf"
            name="kanban_for_manufacturing.report_reordering_rule_barcode"
            file="kanban_for_manufacturing.report_reordering_rule_barcode"
            paperformat="paperformat_krr_barcode_report"/>
    </data>
</odoo>
