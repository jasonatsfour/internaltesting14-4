<odoo>
    <data>

        <record id="update_octopart_price_view" model="ir.ui.view">
            <field name="name">update.octopart.price.form</field>
            <field name="model">update.octopart.price</field>
            <field name="arch" type="xml">
                <form string="Update Octopart Vendor Price">
                    <p class="oe_grey">
                        This will fetch price from Octopart and update it in
                        selected records.
                    </p>
                    <footer>
                        <button string="Update Price" name="update_price"
                                type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_update_octopart_price" model="ir.actions.act_window">
            <field name="name">Update Octopart Vendor Price</field>
            <field name="res_model">update.octopart.price</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="product.model_product_supplierinfo"/>
        </record>

    </data>
</odoo>
