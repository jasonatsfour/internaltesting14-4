<odoo>
    <data>

        <record id="create_vendor_pricelist_form_view" model="ir.ui.view">
            <field name="name">create.vendor.pricelist.tree.view</field>
            <field name="model">vendor.pricelist.create</field>
            <field name="arch" type="xml">
                <form string="Vendors &amp; Pricelist">
                    <p>
                    Selected Vendors will be created in the system along
                    with the pricelist.
                    </p>
                    <footer>
                        <button string="Create Vendors &amp; Pricelists"
                                name="create_vendors_pricelist"
                                type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_create_vendor_pricelist" model="ir.actions.act_window">
            <field name="name">Create Vendors &amp; Pricelists</field>
            <field name="res_model">vendor.pricelist.create</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id"
                   ref="model_octopart_seller_detail"/>
        </record>

    </data>
</odoo>
